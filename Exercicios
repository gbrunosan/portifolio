}

4) Verificar se um número é par/ímpar e positivo/negativo
//Verificar se é par ou ímpar ou positivo ou negativo
package exercicios

import "fmt"

func VerificarNumero(n int) {
	tipo := ""
	if n%2 == 0 {
		tipo = "Par"
	} else{
		tipo = "Ímpar"
	}

	sinal := ""
	if n > 0 {
		sinal = "Positivo"
	} else if n < 0 {
		sinal = "Negativo"
	} else {
		sinal = "Neutro"
	}

	fmt.Printf("O número %d é %s e %s\n", n, tipo, sinal)
}


5) Verificação de número primo
//Verificação de número primo
package exercicios

import ("fmt"; "math")

func VerificarPrimo(n int) {
	if n <= 1 {
		fmt.Printf("%d não é primo\n", n)
		return
	}

	isPrimo := true

	lastNumber := int(math.Sqrt(float64(n)))

	for i := 2; i <= lastNumber; i++ {
		if n%i == 0 {
			isPrimo = false
			break
		}
	}

	if isPrimo {
		fmt.Printf("%d é primo\n", n)
	} else {
		fmt.Printf("%d não é primo\n", n)
	}
}	

